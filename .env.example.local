# =============================================================================
# WASKITA APPLICATION CONFIGURATION (LOCAL DEVELOPMENT)
# =============================================================================
# Copy this file to .env and update values for your environment
# SECURITY WARNING: Never commit .env files to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:admin12345@localhost:5432/db_waskita
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=db_waskita
DATABASE_USER=postgres
DATABASE_PASSWORD=admin12345

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================
SECRET_KEY=change-this-to-a-secure-random-key
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_CONFIG=development
DOTENV_OVERRIDE=True

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600
JWT_SECRET_KEY=change-this-jwt-secret-key
WASKITA_API_KEY=change-this-api-key

# Session Security
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=10737418240  # 10GB

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
# Paths are relative to the project root in local development
WORD2VEC_MODEL_PATH=models/embeddings/word2vec_model.joblib
MODEL_INDOBERT_PATH=models/indobert
LABEL_ENCODER_PATH=models/label_encoder/label_encoder.joblib

# Classification Models (7 Models)
MODEL_NAIVE_BAYES_PATH=models/classifiers/Naive Bayes_classifier_model.joblib
MODEL_SVM_PATH=models/classifiers/SVM_classifier_model.joblib
MODEL_RANDOM_FOREST_PATH=models/classifiers/Random Forest_classifier_model.joblib
MODEL_LOGISTIC_REGRESSION_PATH=models/classifiers/Logistic Regression_classifier_model.joblib
MODEL_DECISION_TREE_PATH=models/classifiers/Decision Tree_classifier_model.joblib
MODEL_KNN_PATH=models/classifiers/KNN_classifier_model.joblib

# =============================================================================
# EMAIL & ADMIN
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
ADMIN_EMAIL=admin@waskita.com

# =============================================================================
# APIFY SCRAPING
# =============================================================================
APIFY_API_TOKEN=your-apify-api-token
APIFY_TWITTER_ACTOR=heLL6fU...
APIFY_TIKTOK_ACTOR=Clockworks...
APIFY_FACEBOOK_ACTOR=KoJ...
