# =============================================================================
# WASKITA APPLICATION CONFIGURATION (DOCKER PRODUCTION)
# =============================================================================
# Copy this file to .env.production
# SECURITY WARNING: Never commit .env files to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Docker networking uses service names as hostnames
DATABASE_URL=postgresql://admin:admin12345@db:5432/db_waskita
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_NAME=db_waskita
DATABASE_USER=admin
DATABASE_PASSWORD=admin12345

# PostgreSQL Container Settings
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin12345
POSTGRES_DB=db_waskita

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================
SECRET_KEY=change-this-to-a-secure-random-key
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_CONFIG=production
# In Docker, we prefer environment variables from docker-compose over .env file
DOTENV_OVERRIDE=False

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600
JWT_SECRET_KEY=change-this-jwt-secret-key
WASKITA_API_KEY=change-this-api-key

# Session Security (Strict for Production)
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Docker volume path
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=10737418240  # 10GB

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
# Absolute paths inside the container
WORD2VEC_MODEL_PATH=/app/models/embeddings/word2vec_model.joblib
MODEL_INDOBERT_PATH=/app/models/indobert
LABEL_ENCODER_PATH=/app/models/label_encoder/label_encoder.joblib

# Classification Models (7 Models)
MODEL_NAIVE_BAYES_PATH=/app/models/classifiers/Naive Bayes_classifier_model.joblib
MODEL_SVM_PATH=/app/models/classifiers/SVM_classifier_model.joblib
MODEL_RANDOM_FOREST_PATH=/app/models/classifiers/Random Forest_classifier_model.joblib
MODEL_LOGISTIC_REGRESSION_PATH=/app/models/classifiers/Logistic Regression_classifier_model.joblib
MODEL_DECISION_TREE_PATH=/app/models/classifiers/Decision Tree_classifier_model.joblib
MODEL_KNN_PATH=/app/models/classifiers/KNN_classifier_model.joblib

# =============================================================================
# EMAIL & ADMIN
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
ADMIN_EMAIL=admin@waskita.com

# =============================================================================
# APIFY SCRAPING
# =============================================================================
APIFY_API_TOKEN=your-apify-api-token
APIFY_TWITTER_ACTOR=heLL6fU...
APIFY_TIKTOK_ACTOR=Clockworks...
APIFY_FACEBOOK_ACTOR=KoJ...
