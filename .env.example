# =============================================================================
# WASKITA APPLICATION CONFIGURATION (EXAMPLE)
# =============================================================================
# Copy this file to .env and update values for your environment
# SECURITY WARNING: Never commit .env files to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/db_waskita
DATABASE_URL_DOCKER=postgresql://username:password@db:5432/db_waskita
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/db_waskitatest

# Individual Database Settings
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=db_waskita
DATABASE_USER=admin
DATABASE_PASSWORD=your_secure_password

# PostgreSQL Settings for Docker Compose
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=db_waskita

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-secure-random-key
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_CONFIG=development
DOTENV_OVERRIDE=True
ASSET_VERSION=1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600
WTF_CSRF_SECRET_KEY=change-this-csrf-secret-key
JWT_SECRET_KEY=change-this-jwt-secret-key
WASKITA_API_KEY=change-this-api-key

# Session Security
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
SESSION_COOKIE_DOMAIN=

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# =============================================================================
# WORD2VEC & MODEL CONFIGURATION
# =============================================================================
WORD2VEC_MODEL_PATH=models/embeddings/word2vec_model.joblib
MODEL_NAIVE_BAYES_PATH=models/classifiers/Naive Bayes_classifier_model.joblib
MODEL_SVM_PATH=models/classifiers/SVM_classifier_model.joblib
MODEL_RANDOM_FOREST_PATH=models/classifiers/Random Forest_classifier_model.joblib
MODEL_LOGISTIC_REGRESSION_PATH=models/classifiers/Logistic Regression_classifier_model.joblib
MODEL_DECISION_TREE_PATH=models/classifiers/Decision Tree_classifier_model.joblib
MODEL_KNN_PATH=models/classifiers/KNN_classifier_model.joblib
MODEL_INDOBERT_PATH=models/indobert
LABEL_ENCODER_PATH=models/label_encoder/label_encoder.joblib

# =============================================================================
# EMAIL CONFIGURATION (Gmail SMTP)
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_EMAIL=admin@waskita.com
ADMIN_EMAILS=admin@waskita.com,admin2@waskita.com

# =============================================================================
# OTP SYSTEM CONFIGURATION
# =============================================================================
OTP_ENABLED=True
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=30
MAX_OTP_ATTEMPTS=3
LOCKOUT_DURATION_MINUTES=15

# =============================================================================
# REGISTRATION SETTINGS
# =============================================================================
REGISTRATION_ENABLED=True
AUTO_APPROVE_REGISTRATION=False

# =============================================================================
# APPLICATION URLS
# =============================================================================
BASE_URL=http://localhost:5000
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# =============================================================================
# EMAIL NOTIFICATION SETTINGS
# =============================================================================
SEND_EMAIL_NOTIFICATIONS=True
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY_SECONDS=5

# =============================================================================
# APIFY API CONFIGURATION
# =============================================================================
APIFY_API_TOKEN=your-apify-api-token
APIFY_BASE_URL=https://api.apify.com/v2
APIFY_TWITTER_ACTOR=kaitoeasyapi/twitter-x-data-tweet-scraper-pay-per-result-cheapest
APIFY_FACEBOOK_ACTOR=apify/facebook-scraper
APIFY_TIKTOK_ACTOR=clockworks/free-tiktok-scraper
APIFY_TIMEOUT=30
APIFY_MAX_RETRIES=3
APIFY_RETRY_DELAY=5

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/waskita.log

# =============================================================================
# MISC
# =============================================================================
APP_NAME=Waskita
DISABLE_MODEL_LOADING=False
